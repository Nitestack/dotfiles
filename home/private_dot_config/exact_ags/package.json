{
  "name": "ags-dotfiles",
  "scripts": {
    "lint": "eslint .",
    "format": "prettier '**/*.{js,ts,mjs,json,scss}' --ignore-path .gitignore --ignore-unknown --no-error-on-unmatched-pattern --write",
    "format:check": "prettier '**/*.{js,ts,mjs,json,scss}' --ignore-path .gitignore --ignore-unknown --no-error-on-unmatched-pattern --check"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.2.1",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "eslint": "^8.57.0",
    "prettier": "^3.3.2",
    "typescript": "^5.5.2"
  }
}
