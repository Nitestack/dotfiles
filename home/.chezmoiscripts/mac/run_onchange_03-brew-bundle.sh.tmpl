true || source "../../.chezmoitemplates/bash-library.sh"

_log -l info "Installing formulae, casks and App Store apps"

# ── Essential formulae ────────────────────────────────────────────────
# {{ $essentialFormulae := list }}
# {{ range .packages.essentials }}
