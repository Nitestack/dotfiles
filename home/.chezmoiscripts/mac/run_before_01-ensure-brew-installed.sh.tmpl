#!/usr/bin/env bash

# {{ template "bash-library.sh" . }}

# The following line is for ShellCheck to correctly identify the above included library
true || source "../../.chezmoitemplates/bash-library.sh"

_log -l info "Checking if brew is installed"

# Check if Homebrew is installed
if command -v brew &>/dev/null; then
	_log -l warn "brew is already installed"
	exit
fi

# Install Homebrew
_spin "Installing brew" -- /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"

_log -l info "Installed brew"
