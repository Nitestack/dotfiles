setup_mirrorlist() {
	# Check if mirrorlist was already updated
	if [[ -f "/etc/pacman.d/mirrorlist.bak" ]]; then
		echo "Arch Linux: Mirrorlist is already up to date"
		exit 2
	fi

	# Update mirrorlist
	pacman_ensure_installed reflector
	sudo cp /etc/pacman.d/mirrorlist /etc/pacman.d/mirrorlist.bak
	sudo reflector --verbose --latest 10 --protocol https --sort rate --save /etc/pacman.d/mirrorlist
}

show_spinner "setup_mirrorlist" "Arch Linux: Checking if mirrorlist is up to date" "Arch Linux: Updated mirrorlist"
