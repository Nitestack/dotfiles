{{- $name := promptStringOnce . "name" "Name" -}}
{{- $email := promptStringOnce . "email" "Email Address" -}}
{{- $font_display := promptStringOnce . "font-display" "Font Display" -}}
{{- $font_mono := promptStringOnce . "font-mono" "Font Mono" -}}
{{- $font_mono_weight := promptStringOnce . "font-mono-weight" "Font Mono Weight" -}}
{{- $hosttype_choices := list "personal" "work" -}}
{{- $hosttype := promptChoiceOnce . "hosttype" "What type of host are you on" $hosttype_choices -}}
{{- $project_base_path := "" -}}
{{- $osID := .chezmoi.os -}}
{{- if (and (eq .chezmoi.os "linux") (hasKey .chezmoi.osRelease "id")) -}}
{{-   $osID = printf "%s-%s" .chezmoi.os .chezmoi.osRelease.id -}}
{{- end -}}
{{- if eq $hosttype "personal" -}}
  {{- if eq .chezmoi.os "windows" -}}
    {{- $project_base_path = "Programmierung/projects" -}}
  {{- else if eq .chezmoi.os "linux" -}}
    {{- $project_base_path = "projects" -}}
  {{- end -}}
{{- end -}}
{{- $chassisType := "desktop" }}
{{- if eq .chezmoi.os "darwin" }}
{{-   if contains "MacBook" (output "sysctl" "-n" "hw.model") }}
{{-     $chassisType = "laptop" }}
{{-   else }}
{{-     $chassisType = "desktop" }}
{{-   end }}
{{- else if eq .chezmoi.os "linux" }}
{{-   $chassisType = (output "hostnamectl" "--json=short" | mustFromJson).Chassis }}
{{- else if eq .chezmoi.os "windows" }}
{{-   $chassisType = (output "powershell.exe" "-NoProfile" "-NonInteractive" "-Command" "if ((Get-CimInstance -Class Win32_Battery | Measure-Object).Count -gt 0) { Write-Output 'laptop' } else { Write-Output 'desktop' }") | trim }}
{{- end }}
data:
  name: {{ $name | quote }}
  email: {{ $email | quote }}
  editor: "nvim"
  fonts:
    display: {{ $font_display | quote }}
    mono: {{ $font_mono | quote }}
    mono_weight: {{ $font_mono_weight | quote }}
    icons: "Symbols Nerd Font"
  hosttype: {{ $hosttype | quote }}
  device_type: {{ $chassisType | quote }}
  osid: {{ $osID | quote }}
  project_base_path: {{ $project_base_path | quote }}
{{- if eq .chezmoi.os "windows" }}
  # Windows options
  windows:
    oh_my_posh_theme_name: "emodipt-extend"
{{- end }}
  # do not override the following values
{{- if eq .chezmoi.os "linux" -}}
{{-   if (.chezmoi.kernel.osrelease | lower | contains "microsoft") }}
  is_wsl: true
{{-   end -}}
{{- else }}
  is_wsl: false
{{- end }}
sourceDir: {{ .chezmoi.workingTree | quote }}
diff:
  exclude:
    - "scripts"
    - "externals"
merge:
  command: "nvim"
  args:
    - "-d"
    - "{{ "{{" }} .Destination {{ "}}" }}"
    - "{{ "{{" }} .Source {{ "}}" }}"
    - "{{ "{{" }} .Target {{ "}}" }}"
status:
  exclude:
    - always
progress: true
{{ if eq .chezmoi.os "windows" -}}
interpreters:
  ps1:
    command: "pwsh"
    args:
      - "-NoLogo"
{{- end -}}
